{
  "extends": [
    "config:base",
    "group:linters"
  ],
  "packageRules": [{
    "depTypeList": ["dependencies"],
    "timezone": "Europe/Oslo",
    "schedule": ["daily"],
    "automerge": true,
    "major": {
      "automerge": false
    }
  },
  {
    "depTypeList": ["devDependencies"],
    "timezone": "Europe/Oslo",
    "schedule": ["weekly"],
    "commitMessage": "Dev dependency {{depName}} updated to version {{newValue}}",
    "prTitle": "Dev dependency update: {{depName}}",
    "automerge": true,
    "major": {
      "automerge": false
    }
  },
  {
    "groupName": "@podium packages",
    "packagePatterns": ["^@podium/", "^podium"]
  }]
}
