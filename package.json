{
  "name": "@podium/podlet",
  "version": "3.0.0-beta.2",
  "main": "lib/podlet.js",
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/podium-lib/podlet"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "jest .",
    "test:verbose": "jest --verbose",
    "test:coverage": "jest --coverage",
    "lint:format": "eslint --fix .",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@metrics/client": "^2.2.0",
    "@podium/proxy": "^2.4.4",
    "@podium/schemas": "3.0.0-beta.1",
    "@podium/utils": "3.0.0-beta.1",
    "abslog": "2.2.3",
    "joi": "14.3.1",
    "lodash.merge": "^4.6.1",
    "original-url": "^1.2.2"
  },
  "devDependencies": {
    "eslint": "^5.12.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.1",
    "express": "^4.16.3",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.14.3"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 94,
        "functions": 94,
        "lines": 94,
        "statements": 94
      }
    },
    "testEnvironment": "node",
    "clearMocks": true
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix --config ./.eslintrc",
      "git add"
    ],
    "{*.json,*.md,.eslintrc,.prettierrc}": [
      "prettier --write",
      "git add"
    ]
  }
}
