{
  "name": "@podium/podlet",
  "version": "4.2.3",
  "description": "Module for building page fragment servers in a micro frontend architecture. ",
  "main": "lib/podlet.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/podium-lib/podlet"
  },
  "bugs": {
    "url": "https://github.com/podium-lib/issues"
  },
  "homepage": "https://podium-lib.io/",
  "files": [
    "lib",
    "index.d.ts"
  ],
  "types": "index.d.ts",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "jest .",
    "test:verbose": "jest --verbose",
    "test:coverage": "jest --coverage",
    "lint:format": "eslint --fix ."
  },
  "dependencies": {
    "@metrics/client": "2.5.0",
    "@podium/proxy": "4.0.5",
    "@podium/schemas": "4.0.0",
    "@podium/utils": "4.1.2",
    "abslog": "2.4.0",
    "objobj": "^1.0.0"
  },
  "devDependencies": {
    "@podium/test-utils": "2.0.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "express": "^4.17.1",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.3",
    "prettier": "^1.19.1"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 94,
        "functions": 94,
        "lines": 94,
        "statements": 94
      }
    },
    "testEnvironment": "node",
    "clearMocks": true
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix --config ./.eslintrc",
      "git add"
    ],
    "{*.json,*.md,.eslintrc,.prettierrc}": [
      "prettier --write",
      "git add"
    ]
  }
}
