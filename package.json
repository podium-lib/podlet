{
  "name": "@podium/podlet",
  "version": "3.0.2",
  "description": "Module for building page fragment servers in a micro frontend architecture. ",
  "main": "lib/podlet.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/podium-lib/podlet"
  },
  "bugs": {
    "url": "https://github.com/podium-lib/issues"
  },
  "homepage": "https://podium-lib.io/",
  "files": [
    "lib"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "jest .",
    "test:verbose": "jest --verbose",
    "test:coverage": "jest --coverage",
    "lint:format": "eslint --fix ."
  },
  "dependencies": {
    "@metrics/client": "2.4.1",
    "@podium/proxy": "3.0.3",
    "@podium/schemas": "3.0.0",
    "@podium/utils": "3.1.2",
    "abslog": "2.4.0",
    "joi": "14.3.1",
    "objobj": "^1.0.0"
  },
  "devDependencies": {
    "eslint": "^5.14.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-prettier": "^3.0.1",
    "express": "^4.16.3",
    "husky": "^1.3.1",
    "jest": "^24.0.0",
    "lint-staged": "^8.1.4",
    "prettier": "^1.16.3"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 94,
        "functions": 94,
        "lines": 94,
        "statements": 94
      }
    },
    "testEnvironment": "node",
    "clearMocks": true
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix --config ./.eslintrc",
      "git add"
    ],
    "{*.json,*.md,.eslintrc,.prettierrc}": [
      "prettier --write",
      "git add"
    ]
  }
}
